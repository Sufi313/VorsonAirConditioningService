<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_enabled="false">
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="@color/transparent" android:startColor="@color/transparent" android:type="linear" />

                    <stroke android:width="1dp" android:color="@color/holo_gray_dark" />

                    <corners android:radius="5dp" />

                    <padding android:bottom="0dp" android:left="5dp" android:right="5dp" android:top="0dp" />
                </shape>
            </item>


        </layer-list>
    </item>
    <item
        android:state_enabled="true">
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="@color/transparent" android:startColor="@color/transparent" android:type="linear" />

                    <stroke android:width="1dp" android:color="@color/colorPrimary" />

                    <corners android:radius="5dp" />

                    <padding android:bottom="0dp" android:left="5dp" android:right="5dp" android:top="0dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center_vertical|left" android:src="@drawable/dropdown_two" />
            </item>

        </layer-list>
    </item>

</selector>