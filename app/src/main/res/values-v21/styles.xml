<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--suppress AndroidDomInspection -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--suppress AndroidDomInspection -->
    <style name="AppFullTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="button_style_main" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">1dp</item>
        <item name="android:radius">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
        <item name="android:background">@drawable/ripple_effect_theme_btn</item>

    </style>

    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <!-- this is new -->
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>


    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/colorPrimary</item>
        <item name="android:calendarTextColor">@color/colorPrimary</item>
        <item name="android:dayOfWeekBackground">@color/colorPrimary</item>
        <item name="android:yearListSelectorColor">@color/colorPrimary</item>
        <item name="android:datePickerMode">calendar</item>
        <item name="android:minDate">01/01/1991</item>
    </style>

    <style name="dashbord_button_launcher_style">

        <item name="background">@drawable/button_style_dashbord_lounch</item>

    </style>

</resources>