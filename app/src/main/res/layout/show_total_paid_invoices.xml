<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/space_five"
    app:ignore="NamespaceTypo">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#b8ffffff"
        app:cardCornerRadius="3dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/block_text_background"
            android:gravity="center"
            android:weightSum="100">

            <TextView
                android:id="@+id/invoiceNO_invoice_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:ellipsize="end"
                android:ems="1"
                android:gravity="center"
                android:paddingBottom="@dimen/space_five"
                android:paddingEnd="@dimen/space_ten"
                android:paddingStart="@dimen/space_ten"
                android:paddingTop="@dimen/space_five"
                android:textColor="@color/color_black"
                android:textSize="15sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/date_invoice_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="center"
                android:paddingBottom="@dimen/space_five"
                android:paddingTop="@dimen/space_five"
                android:textColor="@color/color_black"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subtotal_invoice_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="center"
                android:paddingBottom="@dimen/space_five"
                android:paddingTop="@dimen/space_five"
                android:textColor="@color/color_black"
                android:textSize="13sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tax_invoice_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="center"
                android:paddingBottom="@dimen/space_five"
                android:paddingTop="@dimen/space_five"
                android:textColor="@color/color_black"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/amount_invoice_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="center"
                android:paddingBottom="@dimen/space_five"
                android:paddingTop="@dimen/space_five"
                android:textColor="@color/color_black"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>