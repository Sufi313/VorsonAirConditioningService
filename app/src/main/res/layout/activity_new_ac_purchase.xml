<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/holo_gray_light">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarNewAcPurchaseActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_blue_header"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarNewAcPurchaseActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/goBackNewAcPurchaseActivity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ripple_effect"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/space_ten"
                android:src="@drawable/ic_go_back_left_arrow" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="@dimen/space_fifty"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:src="@drawable/holygrailz_uk_profile_ui" />

        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/appbarNewAcPurchaseActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/space_ten">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="0dp"
                app:cardElevation="@dimen/space_ten">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/space_ten">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="@dimen/space_ten"
                        android:text="Select Your AC"
                        android:textColor="@color/colorPrimary"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/space_five"
                            android:text="Select Brand"
                            android:layout_weight="0.5"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/space_five"
                            android:text="Select Weight"
                            android:layout_weight="0.5"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp" />


                    </LinearLayout>
                    <LinearLayout
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinnerBrand"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/space_five"
                            android:layout_weight="0.5"
                            android:background="@drawable/drawable_spinner"
                            android:paddingStart="@dimen/space_twentyfive"
                            android:paddingEnd="0dp"
                            android:textAlignment="textStart">

                        </Spinner>
                        <Spinner
                            android:id="@+id/spinnerWeight"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/space_five"
                            android:layout_weight="0.5"
                            android:background="@drawable/drawable_spinner"
                            android:paddingStart="@dimen/space_twentyfive"
                            android:paddingEnd="0dp"
                            android:textAlignment="textStart">

                        </Spinner>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="90">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/space_five"
                            android:text="Select Color"
                            android:layout_weight="30"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/space_five"
                            android:layout_weight="30"
                            android:text="Select Model"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/space_five"
                            android:layout_weight="30"
                            android:text="Quantity"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:weightSum="90">

                        <Spinner
                            android:id="@+id/spinnerColor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/space_five"
                            android:layout_weight="30"
                            android:background="@drawable/drawable_spinner"
                            android:paddingStart="@dimen/space_twentyfive"
                            android:paddingEnd="0dp"
                            android:textAlignment="textStart">

                        </Spinner>
                        <Spinner
                            android:id="@+id/spinnerModel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/space_five"
                            android:layout_weight="30"
                            android:background="@drawable/drawable_spinner"
                            android:paddingStart="@dimen/space_twentyfive"
                            android:paddingEnd="0dp"
                            android:textAlignment="textStart">

                        </Spinner>
                        <EditText
                            android:layout_gravity="center_vertical"
                            android:id="@+id/editTextQty"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="30"
                            android:background="@drawable/edit_text_back_profile"
                            android:paddingStart="@dimen/space_twenty"
                            android:paddingEnd="0dp"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:background="@drawable/block_text_background">



                        <TextView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/tvUploadFileName"
                            android:gravity="start"
                            android:padding="@dimen/space_five"
                            android:textSize="15sp"
                            android:layout_weight="0.2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Select file to upload your specification"
                            android:textColor="@color/colorPrimary"
                            />

                        <ImageButton
                            android:id="@+id/uploadBtn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/space_five"
                            android:layout_marginBottom="@dimen/space_five"
                            android:layout_weight="0.8"
                            android:padding="@dimen/space_five"
                            android:src="@drawable/ic_upload"
                            android:background="@drawable/button_style"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/addmore_newAcPurchaseActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add more AC"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"/>

                        <Button
                            android:id="@+id/addToRequestPurchase"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/space_ten"
                            android:layout_weight="0.05"
                            android:background="@drawable/button_style"
                            android:text="Add To Request"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
