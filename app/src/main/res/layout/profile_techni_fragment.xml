<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <android.support.design.widget.CoordinatorLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="@dimen/space_ten">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image_TPF"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/ic_profile"
                        app:civ_border_color="@color/colorPrimary"
                        app:civ_border_width="2dp" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab_TPF"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="@dimen/space_ten"
                        android:background="@color/colorPrimary"
                        android:src="@drawable/ic_pencil_edit"
                        app:backgroundTint="@color/colorPrimary"
                        app:elevation="10dp"
                        app:layout_anchor="@id/profile_image_TPF"
                        app:layout_anchorGravity="bottom|right"
                        app:layout_collapseMode="pin" />

                </android.support.design.widget.CoordinatorLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/space_ten">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_ten"
                    android:paddingEnd="@dimen/space_ten"
                    android:paddingStart="@dimen/space_ten"
                    android:text="Email"
                    android:textColor="@color/color_black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etEmail_TPF"
                    style="@style/edit_text_style_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_ten"
                    android:inputType="text"
                    android:textColor="@color/color_black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_ten"
                    android:paddingEnd="@dimen/space_ten"
                    android:paddingStart="@dimen/space_ten"
                    android:text="Mobile Number"
                    android:textColor="@color/color_black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etMobile_TPF"
                    style="@style/edit_text_style_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_ten"
                    android:inputType="text"
                    android:textColor="@color/color_black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_ten"
                    android:paddingEnd="@dimen/space_ten"
                    android:paddingStart="@dimen/space_ten"
                    android:text="Address"
                    android:textColor="@color/color_black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etAddress_TPF"
                    style="@style/edit_text_style_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_ten"
                    android:inputType="text"
                    android:textColor="@color/color_black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_ten"
                    android:paddingEnd="@dimen/space_ten"
                    android:paddingStart="@dimen/space_ten"
                    android:text="Date of Birth"
                    android:textColor="@color/color_black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etdob_TPF"
                    style="@style/edit_text_style_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_ten"
                    android:inputType="text"
                    android:clickable="true"
                    android:drawableEnd="@drawable/ic_cal"
                    android:editable="false"
                    android:focusable="false"
                    android:longClickable="false"
                    android:textColor="@color/color_black" />


                <Button
                    android:id="@+id/saveBtn_TPF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_ten"
                    android:background="@drawable/button_style"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>