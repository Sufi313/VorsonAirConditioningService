<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/space_ten">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:theme="@style/edit_text_style"
                    android:paddingBottom="@dimen/space_ten"
                    android:paddingTop="@dimen/space_ten"
                    android:text="Your Shipping Details"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.91"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_profile" />


                <EditText
                    android:id="@+id/etFullnameAcPurchaseDialog"
                    android:theme="@style/edit_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.09"
                    android:hint="@string/full_name"
                    android:inputType="text"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="#5da1e6" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.91"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_email_envelope" />


                <EditText
                    android:theme="@style/edit_text_style"
                    android:id="@+id/etEmailAcPurchaseDialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.09"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="#5da1e6" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.91"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_telephone" />


                <EditText
                    android:theme="@style/edit_text_style"
                    android:id="@+id/etContectAcPurchaseDialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.09"
                    android:hint="@string/phone_number"
                    android:inputType="phone"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="#5da1e6"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.91"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_placeholder" />


                <EditText
                    android:theme="@style/edit_text_style"
                    android:id="@+id/etAddressAcPurchaseDialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.09"
                    android:hint="Your Address"
                    android:inputType="phone"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="#5da1e6"
                    />

            </LinearLayout>


                <Button
                    android:id="@+id/dialog_ac_confirm_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_ten"
                    android:layout_weight="0.05"
                    android:background="@drawable/button_style"
                    android:text="Confirm Your Request"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>