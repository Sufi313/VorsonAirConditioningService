<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "@color/holo_gray_light"
    android:orientation="vertical"
    tools:context=".technician.ViewAssignJobActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarViewAssignJobActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_blue_header"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarViewAssignJobActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/goBackViewAssignJobActivity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="@dimen/space_ten"
                android:src="@drawable/ic_go_back_left_arrow"
                android:background="@drawable/ripple_effect"
                android:contentDescription="@string/app_name"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="@dimen/space_fifty"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:src="@drawable/holygrailz_uk_profile_ui" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/space_ten">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_ten"
                    android:gravity="center"
                    android:text="Job Information"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30sp"
                    android:fontFamily="@font/roboto_bold" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"/>

                <RelativeLayout
                    android:id="@+id/L1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/person_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_people_icon" />


                    <TextView
                        android:id="@+id/client_heading"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_toEndOf="@id/person_image"
                        android:gravity="start"
                        android:paddingEnd="@dimen/space_ten"
                        android:paddingStart="@dimen/space_ten"
                        android:text="Client Name"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvClientName_ViewAssignJobActivity"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_below="@+id/client_heading"
                        android:layout_toEndOf="@id/person_image"
                        android:gravity="start"
                        android:paddingEnd="@dimen/space_ten"
                        android:paddingStart="@dimen/space_ten"
                        android:text="sadiq"
                        android:textColor="@color/holo_gray_dark"
                        android:textSize="15sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/holo_gray_light"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="20dp"/>

                <RelativeLayout
                    android:id="@+id/L2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/phone_logo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_call_icon" />


                    <TextView
                        android:id="@+id/phone_heading"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_toEndOf="@id/phone_logo"
                        android:gravity="start"
                        android:paddingEnd="@dimen/space_ten"
                        android:paddingStart="@dimen/space_ten"
                        android:text="Client Phone"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvClientPhone_ViewAssignJobActivity"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_below="@+id/phone_heading"
                        android:layout_toEndOf="@id/phone_logo"
                        android:gravity="start"
                        android:paddingEnd="@dimen/space_ten"
                        android:paddingStart="@dimen/space_ten"
                        android:text="032234244"
                        android:textColor="@color/holo_gray_dark"
                        android:textSize="15sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/holo_gray_light"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="20dp"/>

                <RelativeLayout
                    android:id="@+id/L3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/service_logo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_service_icon" />


                    <TextView
                        android:id="@+id/service_heading"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_toEndOf="@id/service_logo"
                        android:gravity="start"
                        android:paddingEnd="@dimen/space_ten"
                        android:paddingStart="@dimen/space_ten"
                        android:text="Service Type"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvServiceType_ViewAssignJobActivity"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_below="@+id/service_heading"
                        android:layout_toEndOf="@id/service_logo"
                        android:gravity="start"
                        android:paddingEnd="@dimen/space_ten"
                        android:paddingStart="@dimen/space_ten"
                        android:text="AC Gas Filling"
                        android:textColor="@color/holo_gray_dark"
                        android:textSize="15sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/holo_gray_light"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="20dp"/>

                <RelativeLayout
                    android:id="@+id/L4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/priority_logo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_fast_clock" />


                    <TextView
                        android:id="@+id/priority_heading"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_toEndOf="@id/priority_logo"
                        android:gravity="start"
                        android:paddingEnd="@dimen/space_ten"
                        android:paddingStart="@dimen/space_ten"
                        android:text="Service Priority"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvServicePriority_ViewAssignJobActivity"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_below="@+id/priority_heading"
                        android:layout_toEndOf="@id/priority_logo"
                        android:gravity="start"
                        android:paddingEnd="@dimen/space_ten"
                        android:paddingStart="@dimen/space_ten"
                        android:text="High"
                        android:textColor="@color/holo_gray_dark"
                        android:textSize="15sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/holo_gray_light"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="20dp"/>


                <RelativeLayout
                    android:id="@+id/L6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/address_logo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_address_icon" />


                    <TextView
                        android:id="@+id/address_heading"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_toEndOf="@id/address_logo"
                        android:gravity="start"
                        android:paddingEnd="@dimen/space_ten"
                        android:paddingStart="@dimen/space_ten"
                        android:text="Client Address"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvAddress_ViewAssignJobActivity"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_below="@+id/address_heading"
                        android:layout_toEndOf="@id/address_logo"
                        android:gravity="start"
                        android:paddingEnd="@dimen/space_ten"
                        android:paddingStart="@dimen/space_ten"
                        android:text="House-173W, PECHS Society, Karachi."
                        android:textColor="@color/holo_gray_dark"
                        android:textSize="15sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/holo_gray_light"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="20dp"/>

                <RelativeLayout
                    android:id="@+id/L7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/message_logo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_message_icon" />


                    <TextView
                        android:id="@+id/message_heading"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_toEndOf="@id/message_logo"
                        android:gravity="start"
                        android:paddingEnd="@dimen/space_ten"
                        android:paddingStart="@dimen/space_ten"
                        android:text="Message"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvMessage_ViewAssignJobActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/message_heading"
                        android:layout_toEndOf="@id/message_logo"
                        android:gravity="start"
                        android:paddingEnd="@dimen/space_ten"
                        android:paddingStart="@dimen/space_ten"
                        android:text="please_make_it_quick"
                        android:textColor="@color/holo_gray_dark"
                        android:textSize="15sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/holo_gray_light"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="@dimen/space_ten"/>

                <Spinner
                    android:id="@+id/spnrStstus_ViewAssignJobActivity"
                    android:layout_width="342dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/space_five"
                    android:background="@drawable/drawable_spinner_ticket"
                    android:paddingEnd="0dp"
                    android:layout_margin="@dimen/space_ten"
                    android:paddingStart="@dimen/space_twentyfive"
                    android:textAlignment="textStart">

                </Spinner>


                <Button
                    android:id="@+id/btnSubmit_ViewAssignJobActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_ten"
                    android:layout_marginEnd="@dimen/space_fifty"
                    android:layout_marginStart="@dimen/space_fifty"
                    android:layout_marginTop="@dimen/space_twenty"
                    android:background="@drawable/button_style"
                    android:text="@string/submit"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
