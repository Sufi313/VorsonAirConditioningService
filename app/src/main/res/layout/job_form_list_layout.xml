<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/JobFormList_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:weightSum="100">

            <TextView
                android:id="@+id/JobFormList_serialNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="22"
                android:ems="10"
                android:gravity="center"
                android:textColor="@color/secondary_text"
                android:textSize="14sp"/>


            <TextView
                android:id="@+id/JobFormList_jobNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="center"
                android:ems="10"
                android:textColor="@color/secondary_text"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/JobFormList_clientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="19"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:ems="10"
                android:textColor="@color/secondary_text"
                android:textSize="14sp"/>


            <TextView
                android:id="@+id/JobFormList_Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="19"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:ems="10"
                android:textColor="@color/secondary_text"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="21"
                android:gravity="center">

            <ImageView
                android:id="@+id/JobFormList_Invoice"
                android:layout_width="20dp"
                android:layout_height="20dp"

                />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
