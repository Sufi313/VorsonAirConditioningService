<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/holo_gray_light"
    android:padding="@dimen/space_ten"
    android:orientation="vertical"
    tools:context=".technician.ShowSubmitJobActivity">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/showSubmitJobnestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="0dp"
            app:cardElevation="@dimen/space_ten">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_ten">




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Client Name/Id"
                        android:textColor="@color/color_black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/showSubmitJob_clientName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_ten"
                        android:textColor="@color/color_black"
                        android:textSize="20sp" />





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_ten"
                    android:orientation="horizontal"
                    android:weightSum="120">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="@string/time_in"
                        android:textColor="@color/color_black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="@string/time_out"
                        android:textColor="@color/color_black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="@string/distance"
                        android:textColor="@color/color_black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="120">

                    <TextView
                        android:id="@+id/showSubmitJob_timeIn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@color/color_black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/showSubmitJob_timeOut"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@color/color_black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/showSubmitJob_distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@color/color_black"
                        android:textSize="20sp" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_ten"
                    android:background="@color/transparent"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/showSubmitJob_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>